## Install Manually
# Box

# install karabiner-elements
# how do we set up karabiner-elements from command line?
brew cask install karabiner-elements

# install python 3
xcode-select --install
brew install python


# install pip3
# https://pip.pypa.io/en/stable/installing/
curl https://bootstrap.pypa.io/get-pip.py -o get-pip.py
python get-pip.py

# install virtualenv
# https://virtualenv.pypa.io/en/latest/
pip install virtualenv

# install monity-helper
# not sure if there are settings we can play with to add monity to notifications
brew cask install monity-helper

# install sublime text
brew cask install sublime-text
# add license

# install visual studio code
brew cask install visual-studio-code
# Extensions
## ms-vscode.cpptools
## install remote development extension pack

# install brave browser
brew cask install brave-browser
# brave extensions
## honey
## rikaikun
## raindrop.io
## momentum

# install 1password
# not sure if there are settings files we can play with here to add menu bar icon
brew cask install 1password

# install vlc
brew cask install vlc
# make vlc the default media player
# https://forum.videolan.org/viewtopic.php?t=80411
# turn off "skip frames"

# install nordvpn
brew cask install nordvpn

# install spotify
brew cask install spotify
# set streaming quality to "very high"

# install zoom
brew cask install zoom 

# install discord
brew cask install discord

# install slack
brew cask install slack

# install focus
brew cask install focus
# https://heyfocus.com/docs/features/advanced-url-blocking/
# https://www.twitch.tv/(?!realmomjeans|snurtlefish|studywithme_lyync|willystudies)(\w*)
# https://www.youtube.com/(?!watch\?v=7KSoWzbznhk|watch\?v=5qap5aO4i9A)(\w*)

# install obs
brew cask install obs

brew install blackhole-2ch

# install fliqlo
brew install --cask fliqlo
# set screensaver to fliqlo

